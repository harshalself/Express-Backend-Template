{
  "name": "express-backend-template",
  "version": "1.0.0",
  "description": "Express Backend Template with User and Source Management",
  "main": "build/src/server.js",
  "scripts": {
    "main": "npm run build && cross-env NODE_ENV=production node build/src/server.js",
    "start": "cross-env NODE_ENV=production node build/src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "build": "tsc && npm run postbuild",
    "postbuild": "cpy 'docs/**/*' build/docs",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPatterns='unit' --forceExit --detectOpenHandles",
    "test:integration": "jest --testPathPatterns='integration' --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "validate:swagger": "ts-node docs/validate-swagger.ts",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "express",
    "backend",
    "template",
    "typescript",
    "api"
  ],
  "author": "Harshal",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.856.0",
    "@aws-sdk/lib-storage": "^3.850.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bwip-js": "^4.6.0",
    "canvas": "^3.1.0",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "envalid": "^8.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jimp": "^1.6.0",
    "jsbarcode": "^3.11.6",
    "jsonwebtoken": "^9.0.2",
    "jsqr": "^1.4.0",
    "knex": "^3.1.0",
    "mammoth": "^1.10.0",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "nodemailer": "^7.0.3",
    "nodemon": "^3.1.10",
    "pdf-parse": "^1.1.1",
    "pg": "^8.13.3",
    "qrcode": "^1.5.4",
    "qrcode-reader": "^1.0.4",
    "redis": "^5.8.0",
    "sharp": "^0.34.2",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yamljs": "^0.3.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.0.10",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/yamljs": "^0.2.34",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.3",
    "typescript-eslint": "^8.35.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
